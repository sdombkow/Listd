<% if current_user != nil %>
	<div class="title-bar">
  		<h5>Upcoming Tickets</h5>
	</div>

	<div class="content-box">
  		<% @tickets.each do |ticket| %>
			<% if (!ticket.redeemed) %>
				<div class = "row-fluid">
      				<div class="pass-item">
						<span><%= link_to ticket.ticket_set.bar.name, pass %></span>
						<span class="offset2"><%= ticket.ticket_set.date.strftime("%m/%d/%Y") %></span>
  	  				</div> <!-- end of .pass-item -->
				</div>
			<% end %>
  		<% end %>
	</div>
<% end %>
