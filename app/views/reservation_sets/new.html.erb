      				<% @reservation_set.errors.full_messages.each do |msg| %>
        				<li><%= msg %></li>
      				<% end %>
      			</ul>
    		</div>
  		<% end %>
	
		<%= f.fields_for :fecha do |builder| %>
			<div class="field">
				<%= builder.label :date %><br />
	    		<%= builder.date_select :date %>
			</div>
		<% end %>

  		<div class="field">
    		<%= f.label :total_released_reservations %><br />
    		<%= f.number_field :total_released_reservations %>
  		</div>

		<%= f.fields_for :price_point do |builder| %>
			<div class="field">
				<%= builder.label :price %><br />
	    		<%= builder.text_field :price %>
			</div>
		<% end %>

  		<div class="actions">
    		<%= f.submit %>
  		</div>
	<% end %>
	<%= link_to 'Back', user_event_path(@event.user, @event) %>
<% end %>
