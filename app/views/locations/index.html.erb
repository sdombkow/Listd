<h1>Listing locations</h1>

<table>
  <tr>
    <th>User</th>
    <th>Name</th>
    <th>Phone number</th>
    <th>Street address</th>
    <th>Intro paragraph</th>
    <th>Latitude</th>
    <th>Longtitude</th>
    <th>Logo</th>
    <th>Website url</th>
    <th>Facebook url</th>
    <th>Twitter url</th>
    <th>Full address</th>
    <th>City</th>
    <th>Zip code</th>
    <th>State</th>
    <th>Slug</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.user_id %></td>
    <td><%= location.name %></td>
    <td><%= location.phone_number %></td>
    <td><%= location.street_address %></td>
    <td><%= location.intro_paragraph %></td>
    <td><%= location.latitude %></td>
    <td><%= location.longtitude %></td>
    <td><%= location.logo %></td>
    <td><%= location.website_url %></td>
    <td><%= location.facebook_url %></td>
    <td><%= location.twitter_url %></td>
    <td><%= location.full_address %></td>
    <td><%= location.city %></td>
    <td><%= location.zip_code %></td>
    <td><%= location.state %></td>
    <td><%= location.slug %></td>
    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

