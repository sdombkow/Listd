    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :intro_paragraph %><br />
    <%= f.text_area :intro_paragraph %>
  </div>
  <%= f.fields_for :pass_sets do |builder| %>
