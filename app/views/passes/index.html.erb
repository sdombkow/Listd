<% for pass in @passes %>
  <div class="span3">
	<div class="shadow">
    	<div>
      	<address>
	  		<small>
		        Bar Name: <%= pass.pass_set.bar.name %>
				</br>
				Date of Pass: <%= pass.pass_set.date.strftime("%m/%d/%Y") %> 
				</br>
				# of Passes: <%= pass.entries%>
				</br>
				Name on Purchase: <%= pass.name %>
				</br>
				Confirmation Number: <%= pass.confirmation %>
	    	</small>
	  	</address>
  		</div> <!-- end of .content-box -->
	</div> <!-- end of .section-container -->
  </div>
<% end %>
<%= will_paginate @passes, :previous_label => "Previous", :next_label => "Next" %>